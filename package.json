    "@tauri-apps/plugin-process": "~2.3.0",
    "@tauri-apps/plugin-store": "~2.4.0",
    "clsx": "^2.1.1",
    "dom-to-image": "^2.6.0",
    "exceljs": "^4.4.0",
    "file-saver": "^2.0.5",
    "jszip": "^3.10.1",
    "lucide-react": "^0.542.0",
    "mermaid": "^11.11.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
