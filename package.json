{
  "name": "trycase-app",
  "description": "一款轻量级、本地化、跨平台的测试用例管理工具，基于 Tauri + React 打造",
  "private": true,
  "version": "0.1.0",
  "author": "xiaoqiujun <kdevelop98@gmail.com>",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "source ~/.cargo/env && npm run tauri dev",
    "tauri:build": "npm run tauri build",
    "tauri:check": "npm run typecheck && npm run tauri build --check",
    "release": "node scripts/prepare-release.js"
  },
